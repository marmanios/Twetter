    <div class="col-6 offset-3">
        <h1 class="text-center">Edit Twet!</h1>
        <form method="post" action="/twet/<%=foundTwet.id%>?_method=PATCH">
            <div class="mb-3">
                <label class="form-label" for="title" >Title</label>
                <textarea class="form-control" name = "title" id = "title" type="text"  required><%=foundTwet.title%></textarea>
